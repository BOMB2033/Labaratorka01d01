<Page x:Class="Labaratorka01d01.Pages.AddEditUchet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Labaratorka01d01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditUchet">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ID" Margin="5"/>
            <TextBox Text="{Binding ID}" Margin="5"/>
            <TextBlock Text="Номер счёта" Margin="5"/>
            <TextBox Text="{Binding NumbChet}" Margin="5"/>
            <TextBlock Text="Месяц платежа" Margin="5"/>
            <TextBox Text="{Binding MothPay}" Margin="5"/>
            <TextBlock Text="Тариф" Margin="5"/>
            <TextBox Text="{Binding Rate}" Margin="5"/>
            <TextBlock Text="Количество киловатт" Margin="5"/>
            <TextBox Text="{Binding Kw}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Height="30" Width="150" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Height="30" Width="150" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
